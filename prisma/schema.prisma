datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

model Customer {
  id              String     @id @default(uuid())
  name            String     @unique
  region          String?
  country         String?
  level           String?
  source          String?
  companyFeature  String?
  mainIndustry    String?
  relatedBusiness String?
  demandProducts  String?

  contacts   Contact[]
  followUps  FollowUp[]

  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Contact {
  id         String   @id @default(uuid())
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  customerId String
  name       String
  position   String?
  phone      String?
  owner      String?
}

model FollowUp {
  id         String   @id @default(uuid())
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  customerId String
  owner      String?
  progress   String
  record     String
  advice     String?
  createdAt  DateTime @default(now())
} 