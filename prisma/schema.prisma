generator client {
  provider      = "prisma-client-js"
  output        = "/app/generated/prisma-client"
  binaryTargets = ["native"]
}

generator client_node {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id              String     @id @default(uuid())
  name            String     @unique
  region          String?
  country         String?
  level           String?
  source          String?
  companyFeature  String?
  mainIndustry    String?
  relatedBusiness String?
  demandProducts  String?
  website         String?
  cardInfo        String?
  chemicalSegment String?
  keywords        String?
  suggestion      String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  contacts        Contact[]
  followUps       FollowUp[]
}

model Contact {
  id         String   @id @default(uuid())
  customerId String
  name       String
  position   String?
  phone      String?
  owner      String?
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model FollowUp {
  id         String   @id @default(uuid())
  customerId String
  owner      String?
  progress   String
  record     String
  advice     String?
  createdAt  DateTime @default(now())
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}
